<?page title="Usuarios" contentType="text/html;charset=UTF-8"?>
<zk>
	<window id="winUsuarioEditar" width="37%" vflex="1"
		apply="org.zkoss.bind.BindComposer" border="none" position="center"
		mode="overlapped" class="modal-title">
		<caption label="Datos de Familiares" height="25px" class="modal-title-letters"/>
		<vlayout>
			<grid hflex="1">
				<columns>
					<column align="right" hflex="min" />
					<column/>
				</columns>
				<rows>
					<row>
						<cell class="label-form">Cédula:</cell>
						<cell>
							<textbox
								class="form-control form-control-sm"
								id="txtCedula" hflex="1" xmlns:w="client">
								<attribute w:name="doKeyDown_"><![CDATA[
									function (evt) {
										var keyCode = event.keyCode;
										if( keyCode == 8 // back space
											|| keyCode == 13 // enter
											|| keyCode == 16 // enter
											|| (keyCode >= 35 && keyCode <= 40) // home, end, arrows
											|| keyCode == 46) { // Delete
											this.$doKeyDown_(evt);
										} else if ( !evt.shiftKey &&  // only do without shift key
											(keyCode >= 48 && keyCode <= 57)
											|| (keyCode >= 96 && keyCode <= 105)) {// number range
											this.$doKeyDown_(evt);
										} else {
											evt.stop();
											return;
										}
									}
								]]></attribute>
							</textbox>
						</cell>
					</row>
					<row>
						<cell class="label-form">Tipo de Familiar:</cell>
						<cell>
							<combobox id="cboFamiliar" hflex="1"
								readonly="true"
								>
								<template name="model">
									<comboitem label="" />
								</template>
							</combobox>
						</cell>
					</row>
					<row>
						<cell class="label-form">Nombres:</cell>
						<cell>
							<textbox
								class="form-control form-control-sm" id="txtNombres" hflex="1"/>
						</cell>
					</row>
					<row>
						<cell class="label-form">Apellidos:</cell>
						<cell>
							<textbox
								class="form-control form-control-sm" id="txtApellidos" hflex="1" />
						</cell>
					</row>
					<row>
						<cell class="label-form">Teléfono:</cell>
						<cell>
							<textbox
								class="form-control form-control-sm"
								id="txtTelefono" hflex="1" xmlns:w="client" maxlength="10">
								<attribute w:name="doKeyDown_"><![CDATA[
									function (evt) {
										var keyCode = event.keyCode;
										if( keyCode == 8 // back space
											|| keyCode == 13 // enter
											|| keyCode == 16 // enter
											|| (keyCode >= 35 && keyCode <= 40) // home, end, arrows
											|| keyCode == 46) { // Delete
											this.$doKeyDown_(evt);
										} else if ( !evt.shiftKey &&  // only do without shift key
											(keyCode >= 48 && keyCode <= 57)
											|| (keyCode >= 96 && keyCode <= 105)) {// number range
											this.$doKeyDown_(evt);
										} else {
											evt.stop();
											return;
										}
									}
								]]></attribute>
							</textbox>
						</cell>
					</row>
					<row>
						<cell class="label-form">Educación:</cell>
						<cell>
							<textbox
								class="form-control form-control-sm" id="txtEducacion" hflex="1"/>
						</cell>
					</row
					<row>
						<cell class="label-form">Profesión:</cell>
						<cell>
							<textbox
								class="form-control form-control-sm" id="txtProfesion" hflex="1"/>
						</cell>
					</row>
					<row>
						<cell class="label-form">Trabajo:</cell>
						<cell>
							<textbox
								class="form-control form-control-sm" id="txtTrabajo" hflex="1"/>
						</cell>
					</row>
				</rows>
			</grid>
			<!-- Los iconos listados con iconSclass son de: http://fontawesome.io/icons/ -->
			<vbox hflex="1" align="center" sclass="modal-title" height="35px" pack="center">
				<div hflex="1" align="center">
					<button id="grabar" label="Grabar"
						iconSclass="z-icon-save" zclass="btn-modal"
						onClick="@command('grabar')" />
					<button id="salir" label="Salir"
						iconSclass="z-icon-sign-out" zclass="btn-modal"
						onClick="@command('salir')" />
				</div>
			</vbox>
		</vlayout>
	</window>
</zk>